$white = #fff
$light-grey = #f2f2f2
$silver = #c1c1c1c1
$grey = #ccc
$dusty-grey = #9b9b9b
$dark-grey = #333
$medium-grey = #999
$disabled-grey = #ccc
$silver-blue = #d6dee3
$brand-blue = #3074a6
$orange = #faaf3f

.container
  background: linear-gradient(to bottom, rgba(48, 115, 166, 0.2), #144466)

.chord-button
  margin-right: 20px
  display: inline-block
  width: 200px
  height: 40px
  text-align: center
  background-color: $brand-blue
  border: 0
  border-radius: 4px
  font-size: 13px
  font-weight: bold
  letter-spacing: 0.5px
  cursor: pointer
  color: $white
  &:hover
    background-color: $grey
